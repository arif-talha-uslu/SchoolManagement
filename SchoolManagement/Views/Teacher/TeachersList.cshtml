<hr class="content-divider" />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Teacher Name
            </th>
            <th>
                Teacher Profession
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TeacherName
                </td>

                <td>
                    @item.TeacherProfession
                </td>

                <td>
                    <form asp-action="DeleteTeacher" asp-controller="Teacher" method="post">
                        <input type="hidden" name="id" value="@item.TeacherId"/>
                        <input type="submit" value="DELETE" class="btn btn-outline-danger"/>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


