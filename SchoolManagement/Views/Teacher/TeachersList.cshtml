@model IEnumerable<SchoolManagement.Models.Entities.Teacher>
@{
    ViewData["Title"] = "TeachersList";
}

<h1>Teachers List</h1>

<div class="w-50 p-4 my-3">
    <h3>Add Teacher</h3>
    <form asp-action="AddTeacher" asp-controller="Teacher" method="post">
        <label>Teacher Name</label>
        <input type="text" class="form-control" name="TeacherName" required />

        <label>Teacher Profession</label>
        <input type="text" class="form-control" name="TeacherProfession" required />

        <input type="submit" class="btn btn-outline-primary mt-2" value="ADD" />
    </form>
</div>


