@model SchoolManagement.Models.Entities.Student
@{
    ViewData["Title"] = "Add Student";
}

<h1>AddStudent</h1>

<div class="w-50 p-4 my-3">
    <h3>Add Student</h3>
    <form asp-action="AddStudent" asp-controller="Student" method="post">
        <label>Student Name</label>
        <input type="text" class="form-control" name="StudentName" required />

        <label>Student Surname</label>
        <input type="text" class="form-control" name="StudentSName" required />

        <input type="submit" class="btn btn-outline-primary mt-2" value="ADD" />
    </form>
</div>